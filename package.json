{
  "name": "inprodi",
  "private": true,
  "version": "0.0.0",
  "description": "Inprodi Components Monorepo",
  "author": "Nestor Eduardo Navarro Arizaga",
  "license": "MIT",
  "main": "index.ts",
  "repository": {
    "url": "https://github.com/inprodiwebstudio/inprodi-ui",
    "type": "git"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "scripts": {
    "build": "yarn lerna run build",
    "dev": "yarn lerna run dev",
    "test": "yarn lerna run test",
    "test:watch": "yarn lerna run test:watch",
    "lerna-publish": "yarn build && yarn lerna run publish --no-private",
    "commit": "cz"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "example/*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "lerna": "^6.3.0"
  }
}
